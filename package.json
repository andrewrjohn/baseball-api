{
  "name": "scoreboard-api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "license": "MIT",
  "dependencies": {
    "cheerio": "^1.0.0-rc.12",
    "cors": "^2.8.5",
    "express": "^4.17.3",
    "node-fetch": "^2.6.7",
    "pm2": "^5.3.0",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.1"
  },
  "scripts": {
    "start": "ts-node src/index.ts",
    "build": "tsc && npm run tailwind",
    "dev": "NODE_ENV=development concurrently \"npm run tailwind:watch\" \"nodemon src/index.ts\"",
    "deploy": "npm run build && pm2 start dist -n scoreboard-api",
    "tailwind": "tailwindcss -o public/styles/styles.css",
    "tailwind:watch": "tailwindcss -o public/styles/styles.css --watch"
  },
  "devDependencies": {
    "@types/browser-sync": "^2.26.2",
    "@types/cheerio": "^0.22.13",
    "@types/express": "^4.17.1",
    "@types/node": "^12.7.2",
    "@types/node-fetch": "^2.5.0",
    "browser-sync": "^2.27.5",
    "concurrently": "^6.2.1",
    "nodemon": "^2.0.22",
    "typescript": "^5.0.4"
  }
}
